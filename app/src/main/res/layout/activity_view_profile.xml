<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".View_Profile">

    <ImageView
        android:id="@+id/View_profile_backimg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/car_ui_icon_arrow_back" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_imageDisplay"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:padding="20dp"
            android:src="@drawable/add_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/profile_name_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="104dp"
            android:text="Champzz"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.902"
            app:layout_constraintStart_toEndOf="@+id/profile_imageDisplay"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/profile_posts_number_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="0"
            android:textSize="30dp"
            app:layout_constraintEnd_toStartOf="@+id/profile_number_follower_display"
            app:layout_constraintHorizontal_bias="0.345"
            app:layout_constraintStart_toEndOf="@+id/profile_imageDisplay"
            app:layout_constraintTop_toBottomOf="@+id/profile_name_display" />

        <TextView
            android:id="@+id/profile_posts_number_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posts"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/profile_number_follower_text"
            app:layout_constraintHorizontal_bias="0.385"
            app:layout_constraintStart_toEndOf="@+id/profile_imageDisplay"
            app:layout_constraintTop_toBottomOf="@+id/profile_posts_number_display" />


        <TextView
            android:id="@+id/profile_number_follower_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="72dp"
            android:text="0"
            android:textSize="30dp"
            app:layout_constraintEnd_toStartOf="@+id/profile_number_following_display"
            app:layout_constraintTop_toBottomOf="@+id/profile_name_display" />

        <TextView
            android:id="@+id/profile_number_follower_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="36dp"
            android:layout_marginTop="15dp"
            android:text="Follower"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/profile_number_following_text"
            app:layout_constraintTop_toBottomOf="@+id/profile_number_follower_display" />

        <TextView
            android:id="@+id/profile_number_following_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="52dp"
            android:text="0"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_name_display" />

        <TextView
            android:id="@+id/profile_number_following_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="24dp"
            android:text="Following"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_number_following_display" />




    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/profile_tabLayout"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/profile_ViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>