<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/newcanvadesign2"
        android:padding="10dp">






    <ImageView
        android:id="@+id/post_image_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/account_icon" />



    <TextView
        android:id="@+id/Caption"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="TextView" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_imageDisplay"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="10dp"
                android:src="@drawable/add_profile"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/Post_Username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Champzz"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.144"
                app:layout_constraintStart_toEndOf="@+id/profile_imageDisplay"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/Post_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.145"
                app:layout_constraintStart_toEndOf="@+id/profile_imageDisplay"
                app:layout_constraintTop_toBottomOf="@+id/Post_Username"
                app:layout_constraintVertical_bias="0.101" />

            <!--            app:layout_constraintTop_toBottomOf="@+id/profile_imageDisplay"-->

            <ImageView
                android:id="@+id/share"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"

                android:src="@drawable/send"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/save_post"

                app:layout_constraintHorizontal_bias="0.058"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                app:layout_goneMarginTop="95dp" />

            <ImageView
                android:id="@+id/save_post"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginTop="95dp"

                android:layout_marginEnd="16dp"
                android:src="@drawable/un_bookmark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                android:layout_marginBottom="10dp"/>
<!--            app:layout_constraintTop_toBottomOf="profile_imageDisplay"-->


            <ImageView
                android:id="@+id/comments"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/comment"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/save_post"
                app:layout_constraintHorizontal_bias="0.922"
                app:layout_constraintStart_toEndOf="@+id/share"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.91"
                app:layout_goneMarginTop="95dp" />

            <!--            app:layout_constraintTop_toBottomOf="@+id/profile_imageDisplay"-->


        </androidx.constraintlayout.widget.ConstraintLayout>





    </LinearLayout>

</com.google.android.material.card.MaterialCardView>