<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.AddFragment">

    <LinearLayout
        android:id="@+id/Add_Posts_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Add_fragment_addPost"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/add_post_image"/>
        <TextView
            android:id="@+id/Add_fragment_addPostText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:text="Add Post"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center_vertical"/>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/Add_Reels_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Add_fragment_addReel"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/add_reel_image"/>
        <TextView
            android:id="@+id/Add_fragment_addReelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:text="Add Reels"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center_vertical"/>


    </LinearLayout>



</LinearLayout>