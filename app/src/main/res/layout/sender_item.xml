<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_marginStart="130dp"
    android:layout_marginEnd="20dp"

    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/sender_message_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/sent_bg"
        android:paddingLeft="20dp"
        android:paddingTop="12dp"
        android:paddingRight="20dp"
        android:paddingBottom="25dp"
        android:text="Hii, how are you"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sender_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:text="1:27AM"
        android:textColor="@color/gray"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/sender_message_id"
        app:layout_constraintEnd_toEndOf="@+id/sender_message_id"
        app:layout_constraintHorizontal_bias="0.811"
        app:layout_constraintStart_toStartOf="@+id/sender_message_id" />


</androidx.constraintlayout.widget.ConstraintLayout>